---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card/index.astro'
import AboutMe from '../components/AboutMe.astro'
import IntroCard from '../components/IntroCard.astro'
import Projects from '../components/Projects.astro'
---

<script>
	import { stagger, spring, timeline, type TimelineDefinition } from 'motion'
	import { loaderAnimation } from '../lib/constants'
	const cards = document.querySelectorAll('.card')

	const sequence = [
		loaderAnimation,
		[
			cards,
			{ y: ['40%', '0%'], opacity: [0, 1] },
			{
				at: '-0.1',
				duration: 0.4,
				delay: stagger(0.3),
				easing: spring({ velocity: 100, stiffness: 50, damping: 10 })
			}
		]
	]

	timeline(sequence as TimelineDefinition)
</script>

<Layout title="Phoenix Pereira" description="Aspiring Software Developer">
	<main
		class="relative m-auto grid w-full max-w-6xl gap-2 overflow-y-auto p-2 text-white lg:max-h-[800px] lg:grid-cols-4 lg:grid-rows-8 lg:gap-4"
	>
		<IntroCard />
		<AboutMe />
		<Projects />
		<Card colSpan="lg:col-span-1" rowSpan="lg:row-span-2">
			<p class="text-sm">Â© 2024 Phoenix Pereira</p>

			<p class="mt-4 text-sm">
				Made using <a
					href="https://astro.build/"
					target="_blank"
					class="text-primary-400 hover:underline">Astro</a
				> and the <a
					href="https://github.com/Ladvace/astro-bento-portfolio"
					target="_blank"
					class="text-primary-400 hover:underline"
					>Astro Bento Portfolio template
				</a>
			</p>
		</Card>
	</main>
</Layout>
